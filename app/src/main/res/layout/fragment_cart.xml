<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_shadow"
    tools:context=".CartFragment">
    <LinearLayout
        android:background="@color/white_shadow"
        android:weightSum="2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@color/light_green"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_weight="1.8"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center"
                android:layout_weight="1.6"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/cart_button_back_id"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_backarrow"
                    android:layout_width="50dp"
                    android:layout_height="40dp"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_weight="0.4"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_marginLeft="-55dp"
                    android:fontFamily="@font/milkyniceclean"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:text="Cart"
                    android:textSize="30sp"
                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_weight="0.2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginTop="7dp"
                android:layout_weight="0.2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/cart_recyclerview_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </android.support.v7.widget.RecyclerView>
            </LinearLayout>
            <LinearLayout
                android:layout_margin="2dp"
                android:background="@color/light_green"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_weight="1.8"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:paddingLeft="10dp"
                    android:gravity="center|left"
                    android:orientation="vertical"
                    android:layout_weight="1.3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:fontFamily="@font/young"
                        android:textAllCaps="false"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:text="Total: "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                     <LinearLayout
                         android:orientation="horizontal"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content">
                         <TextView
                             android:fontFamily="@font/young"
                             android:textAllCaps="false"
                             android:textSize="18sp"
                             android:textStyle="bold"
                             android:textColor="@color/white"
                             android:text="$"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"/>
                         <TextView
                             android:id="@+id/tv_cart_totalcost_ID"
                             android:fontFamily="@font/young"
                             android:textAllCaps="false"
                             android:textSize="18sp"
                             android:textStyle="bold"
                             android:textColor="@color/white"
                             android:text="0"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"/>
                     </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center|right"
                    android:layout_weight="0.7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/cart_proceedButton_ID"
                        android:text="PROCEED"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textAllCaps="false"
                        android:background="@drawable/round_button_green"
                        android:layout_margin="7dp"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>