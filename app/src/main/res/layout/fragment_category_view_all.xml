<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategoryViewAllFragment">

    <LinearLayout
        android:orientation="vertical"
        android:background="#ececee"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <LinearLayout
                android:background="@color/light_green"
                android:layout_width="match_parent"
                android:layout_height="90dp">
                <ImageView
                    android:id="@+id/cateViewAll_backButton_id"
                    android:scaleType="fitCenter"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_backarrow"
                    android:layout_width="50dp"
                    android:layout_height="40dp"/>
            </LinearLayout>
            <android.support.v7.widget.CardView
                android:layout_marginTop="40dp"
                android:layout_centerHorizontal="true"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                card_view:cardUseCompatPadding="true"
                android:layout_width="310dp"
                android:layout_height="105dp"
                card_view:cardElevation="8dp"
                card_view:cardBackgroundColor="#FFFFFF">
                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:background="#FFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_weight="1.5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:scaleType="fitCenter"
                            android:src="@drawable/icon_gy"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_marginLeft="-20dp"
                            android:fontFamily="@font/milkyniceclean"
                            android:textStyle="bold"
                            android:textColor="@color/light_green"
                            android:text="Categories"
                            android:textSize="30sp"
                            android:textAllCaps="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>

        <LinearLayout
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="5dp"
            android:weightSum="4"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:id="@+id/cateViewAll_tv_id"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <android.support.v7.widget.CardView
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        card_view:cardUseCompatPadding="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        card_view:cardElevation="5dp"
                        card_view:cardBackgroundColor="#FFFFFF">
                        <LinearLayout
                            android:weightSum="2"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:id="@+id/ctg_btn_tv_id"
                                android:padding="8dp"
                                android:src="@drawable/ic_television"
                                android:layout_weight="0.7"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:gravity="center"
                                android:fontFamily="@font/young"
                                android:textAllCaps="false"
                                android:textSize="20sp"
                                android:textColor="@color/white"
                                android:background="@color/light_green"
                                android:textStyle="bold"
                                android:text="TV"
                                android:layout_weight="1.3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginRight="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <android.support.v7.widget.CardView
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        card_view:cardUseCompatPadding="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        card_view:cardElevation="5dp"
                        card_view:cardBackgroundColor="#FFFFFF">
                        <LinearLayout
                            android:weightSum="2"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:id="@+id/ctg_btn_laptop_id"
                                android:padding="8dp"
                                android:src="@drawable/ic_laptop"
                                android:layout_weight="0.7"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:gravity="center"
                                android:fontFamily="@font/young"
                                android:textAllCaps="false"
                                android:textSize="20sp"
                                android:textColor="@color/white"
                                android:background="@color/light_green"
                                android:textStyle="bold"
                                android:text="Laptop"
                                android:layout_weight="1.3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginRight="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <android.support.v7.widget.CardView
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        card_view:cardUseCompatPadding="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        card_view:cardElevation="5dp"
                        card_view:cardBackgroundColor="#FFFFFF">
                        <LinearLayout
                            android:weightSum="2"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:padding="8dp"
                                android:src="@drawable/ic_camera"
                                android:layout_weight="0.7"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:gravity="center"
                                android:fontFamily="@font/young"
                                android:textAllCaps="false"
                                android:textSize="20sp"
                                android:textColor="@color/white"
                                android:background="@color/light_green"
                                android:textStyle="bold"
                                android:text="Camera"
                                android:layout_weight="1.3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <android.support.v7.widget.CardView
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        card_view:cardUseCompatPadding="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        card_view:cardElevation="5dp"
                        card_view:cardBackgroundColor="#FFFFFF">
                        <LinearLayout
                            android:weightSum="2"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:padding="8dp"
                                android:src="@drawable/ic_gaming"
                                android:layout_weight="0.7"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:gravity="center"
                                android:fontFamily="@font/young"
                                android:textAllCaps="false"
                                android:textSize="20sp"
                                android:textColor="@color/white"
                                android:background="@color/light_green"
                                android:textStyle="bold"
                                android:text="Gaming"
                                android:layout_weight="1.3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <android.support.v7.widget.CardView
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        card_view:cardUseCompatPadding="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        card_view:cardElevation="5dp"
                        card_view:cardBackgroundColor="#FFFFFF">
                        <LinearLayout
                            android:weightSum="2"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:padding="8dp"
                                android:src="@drawable/ic_desktop"
                                android:layout_weight="0.7"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:gravity="center"
                                android:fontFamily="@font/young"
                                android:textAllCaps="false"
                                android:textSize="20sp"
                                android:textColor="@color/white"
                                android:background="@color/light_green"
                                android:textStyle="bold"
                                android:text="Desktop"
                                android:layout_weight="1.3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginRight="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <android.support.v7.widget.CardView
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        card_view:cardUseCompatPadding="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        card_view:cardElevation="5dp"
                        card_view:cardBackgroundColor="#FFFFFF">
                        <LinearLayout
                            android:weightSum="2"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:padding="8dp"
                                android:src="@drawable/ic_mobile"
                                android:layout_weight="0.7"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:gravity="center"
                                android:fontFamily="@font/young"
                                android:textAllCaps="false"
                                android:textSize="20sp"
                                android:textColor="@color/white"
                                android:background="@color/light_green"
                                android:textStyle="bold"
                                android:text="Mobile"
                                android:layout_weight="1.3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <android.support.v7.widget.CardView
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        card_view:cardUseCompatPadding="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        card_view:cardElevation="5dp"
                        card_view:cardBackgroundColor="#FFFFFF">
                        <LinearLayout
                            android:weightSum="2"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:padding="8dp"
                                android:src="@drawable/ic_watch"
                                android:layout_weight="0.7"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:gravity="center"
                                android:fontFamily="@font/young"
                                android:textAllCaps="false"
                                android:textSize="20sp"
                                android:textColor="@color/white"
                                android:background="@color/light_green"
                                android:textStyle="bold"
                                android:text="Watch"
                                android:layout_weight="1.3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <android.support.v7.widget.CardView
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        card_view:cardUseCompatPadding="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        card_view:cardElevation="5dp"
                        card_view:cardBackgroundColor="#FFFFFF">
                        <LinearLayout
                            android:weightSum="2"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:padding="8dp"
                                android:src="@drawable/ic_sports"
                                android:layout_weight="0.7"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:gravity="center"
                                android:fontFamily="@font/young"
                                android:textAllCaps="false"
                                android:textSize="20sp"
                                android:textColor="@color/white"
                                android:background="@color/light_green"
                                android:textStyle="bold"
                                android:text="Sports"
                                android:layout_weight="1.3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginRight="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <android.support.v7.widget.CardView
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        card_view:cardUseCompatPadding="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        card_view:cardElevation="5dp"
                        card_view:cardBackgroundColor="#FFFFFF">
                        <LinearLayout
                            android:weightSum="2"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:padding="8dp"
                                android:src="@drawable/ic_fridge"
                                android:layout_weight="0.7"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:gravity="center"
                                android:fontFamily="@font/young"
                                android:textAllCaps="false"
                                android:textSize="20sp"
                                android:textColor="@color/white"
                                android:background="@color/light_green"
                                android:textStyle="bold"
                                android:text="Fridge"
                                android:layout_weight="1.3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <android.support.v7.widget.CardView
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        card_view:cardUseCompatPadding="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        card_view:cardElevation="5dp"
                        card_view:cardBackgroundColor="#FFFFFF">
                        <LinearLayout
                            android:weightSum="2"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:padding="8dp"
                                android:src="@drawable/ic_ac"
                                android:layout_weight="0.7"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:gravity="center"
                                android:fontFamily="@font/young"
                                android:textAllCaps="false"
                                android:textSize="20sp"
                                android:textColor="@color/white"
                                android:background="@color/light_green"
                                android:textStyle="bold"
                                android:text="AC"
                                android:layout_weight="1.3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <android.support.v7.widget.CardView
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        card_view:cardUseCompatPadding="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        card_view:cardElevation="5dp"
                        card_view:cardBackgroundColor="#FFFFFF">
                        <LinearLayout
                            android:weightSum="2"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:padding="8dp"
                                android:src="@drawable/ic_cctv"
                                android:layout_weight="0.7"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:gravity="center"
                                android:fontFamily="@font/young"
                                android:textAllCaps="false"
                                android:textSize="20sp"
                                android:textColor="@color/white"
                                android:background="@color/light_green"
                                android:textStyle="bold"
                                android:text="CCTV"
                                android:layout_weight="1.3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginRight="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <android.support.v7.widget.CardView
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        card_view:cardUseCompatPadding="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        card_view:cardElevation="5dp"
                        card_view:cardBackgroundColor="#FFFFFF">
                        <LinearLayout
                            android:weightSum="2"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:padding="8dp"
                                android:src="@drawable/ic_headphone"
                                android:layout_weight="0.7"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:gravity="center"
                                android:fontFamily="@font/young"
                                android:textAllCaps="false"
                                android:textSize="20sp"
                                android:textColor="@color/white"
                                android:background="@color/light_green"
                                android:textStyle="bold"
                                android:text="Audio"
                                android:layout_weight="1.3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>