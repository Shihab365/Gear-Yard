<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ececee"
    android:orientation="vertical"
    android:gravity="bottom"
    tools:context=".SignUpActivity">

    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <LinearLayout
            android:weightSum="2"
            android:orientation="vertical"
            android:layout_weight="0.7"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textColor="#31d37c"
                android:textStyle="bold"
                android:fontFamily="@font/porfont"
                android:layout_marginLeft="25dp"
                android:textSize="42sp"
                android:gravity="center|left|bottom"
                android:layout_weight="1"
                android:text="Let's"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:textStyle="bold"
                android:textColor="#31d37c"
                android:fontFamily="@font/porfont"
                android:textSize="42sp"
                android:layout_marginLeft="25dp"
                android:gravity="center|left|top"
                android:layout_weight="1"
                android:text="Start"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1.3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:scaleType="fitCenter"
                android:src="@drawable/icon_gy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp">
        <LinearLayout
            android:gravity="bottom|center"
            android:layout_marginTop="180dp"
            android:background="@drawable/login_round"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:background="@drawable/login_square_2"
                android:layout_width="300dp"
                android:layout_height="60dp">
                <TextView
                    android:gravity="center|right"
                    android:text="Have an account?"
                    android:textAllCaps="false"
                    android:textSize="17sp"
                    android:textColor="#B0000000"
                    android:textStyle="bold"
                    android:layout_weight="0.7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/signup_textview_signin_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"
                    android:gravity="center|left"
                    android:paddingLeft="5dp"
                    android:text="SignIn"
                    android:textAllCaps="false"
                    android:textColor="#31d37c"
                    android:textSize="17sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:weightSum="3"
            android:orientation="vertical"
            android:layout_marginTop="20sp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/login_square_1"
            android:layout_width="300dp"
            android:layout_height="400dp">
            <LinearLayout
                android:gravity="center"
                android:layout_weight="1.3"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textAllCaps="false"
                    android:text="Sign Up"
                    android:textSize="32sp"
                    android:textColor="#31d37c"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:weightSum="4"
                android:orientation="vertical"
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <EditText
                    android:id="@+id/sup_name_id"
                    android:paddingLeft="5dp"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/icon_name"
                    android:layout_margin="8dp"
                    android:background="@drawable/login_edittext_square"
                    android:hint="Full Name"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <EditText
                    android:id="@+id/sup_address_id"
                    android:paddingLeft="5dp"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/icon_address"
                    android:background="@drawable/login_edittext_square"
                    android:layout_margin="8dp"
                    android:hint="Address"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <EditText
                    android:id="@+id/sup_email_id"
                    android:paddingLeft="5dp"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/icon_mail"
                    android:layout_margin="8dp"
                    android:background="@drawable/login_edittext_square"
                    android:hint="Email"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <EditText
                    android:id="@+id/sup_password_id"
                    android:inputType="textPassword"
                    android:paddingLeft="5dp"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/icon_password"
                    android:background="@drawable/login_edittext_square"
                    android:layout_margin="8dp"
                    android:hint="Password"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_weight="1.2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/sup_button_id"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:text="Sign Up"
                    android:textAllCaps="false"
                    android:background="@drawable/login_button_square"
                    android:layout_margin="9dp"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>