<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    android:background="#ececec"
    tools:context=".EndActivity">

    <LinearLayout
        android:background="@color/light_green"
        android:orientation="horizontal"
        android:layout_weight="1.8"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center"
            android:layout_weight="0.4"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:fontFamily="@font/milkyniceclean"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:text="Delivery"
                android:textSize="30sp"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:weightSum="2"
        android:orientation="vertical"
        android:layout_weight="0.2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="0.2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/animationView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:lottie_rawRes="@raw/delivery_anim"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"/>
            </LinearLayout>
            <LinearLayout
                android:background="@color/light_red"
                android:gravity="center"
                android:layout_weight="1.8"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:fontFamily="@font/young"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:text="Your package is being delivered onto your location"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.CardView
                android:layout_centerHorizontal="true"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                card_view:cardUseCompatPadding="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                card_view:cardElevation="10dp"
                card_view:cardCornerRadius="10dp"
                card_view:cardBackgroundColor="@android:color/white">
                <LinearLayout
                    android:weightSum="2"
                    android:orientation="vertical"
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:orientation="vertical"
                        android:weightSum="4"
                        android:layout_weight="0.8"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:gravity="center|bottom"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:fontFamily="@font/romerio"
                                android:textStyle="bold"
                                android:textColor="@color/light_red"
                                android:text="Check Status"
                                android:textSize="22sp"
                                android:textAllCaps="false"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginLeft="5dp"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:gravity="center|left|bottom"
                                android:layout_weight="1.3"
                                android:fontFamily="@font/romerio"
                                android:textStyle="bold"
                                android:textColor="@color/light_red"
                                android:text="Tracking ID:"
                                android:textSize="18sp"
                                android:textAllCaps="false"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:id="@+id/dlv_tv_tracking_id"
                                android:gravity="center|left|bottom"
                                android:layout_weight="0.7"
                                android:fontFamily="@font/romerio"
                                android:textStyle="bold"
                                android:textColor="@color/light_red"
                                android:text="sd445fhf546h"
                                android:textSize="18sp"
                                android:textAllCaps="false"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginLeft="5dp"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:gravity="center|left|bottom"
                                android:layout_weight="1.5"
                                android:fontFamily="@font/young"
                                android:textStyle="bold"
                                android:textColor="@color/light_red"
                                android:text="Agent:"
                                android:textSize="18sp"
                                android:textAllCaps="false"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:gravity="center|left|bottom"
                                android:layout_weight="0.5"
                                android:fontFamily="@font/young"
                                android:textStyle="bold"
                                android:textColor="@color/light_red"
                                android:text="Mr. Robin"
                                android:textSize="18sp"
                                android:textAllCaps="false"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginLeft="5dp"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:gravity="center|left|bottom"
                                android:layout_weight="1.5"
                                android:fontFamily="@font/young"
                                android:textStyle="bold"
                                android:textColor="@color/light_red"
                                android:text="Mobile:"
                                android:textSize="18sp"
                                android:textAllCaps="false"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:gravity="center|left|bottom"
                                android:layout_weight="0.5"
                                android:fontFamily="@font/young"
                                android:textStyle="bold"
                                android:textColor="@color/light_red"
                                android:text="01827642311"
                                android:textSize="18sp"
                                android:textAllCaps="false"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_weight="1.2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <Button
                            android:id="@+id/end_btn_cont_id"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:textSize="20sp"
                            android:text="Continue Shopping"
                            android:textAllCaps="false"
                            android:background="@drawable/profile_button_round"
                            android:layout_width="260dp"
                            android:layout_height="55dp"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>