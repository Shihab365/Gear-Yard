<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentFragment">
    <LinearLayout
        android:orientation="vertical"
        android:background="#ececee"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <LinearLayout
                android:background="@color/light_green"
                android:layout_width="match_parent"
                android:layout_height="90dp">
                <ImageView
                    android:id="@+id/paymeny_backButton_id"
                    android:scaleType="fitCenter"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_backarrow"
                    android:layout_width="50dp"
                    android:layout_height="40dp"/>
            </LinearLayout>
            <android.support.v7.widget.CardView
                android:layout_marginTop="40dp"
                android:layout_centerHorizontal="true"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                card_view:cardUseCompatPadding="true"
                android:layout_width="310dp"
                android:layout_height="105dp"
                card_view:cardElevation="8dp"
                card_view:cardBackgroundColor="#FFFFFF">
                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:background="#FFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_weight="1.5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:scaleType="fitCenter"
                            android:src="@drawable/icon_gy"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_marginLeft="-20dp"
                            android:fontFamily="@font/milkyniceclean"
                            android:textStyle="bold"
                            android:textColor="@color/light_green"
                            android:text="Payment"
                            android:textSize="30sp"
                            android:textAllCaps="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>

        <LinearLayout
            android:weightSum="3"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center|bottom"
                android:layout_weight="1.2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:padding="20dp"
                    android:background="@drawable/payment_shape"
                    android:fontFamily="@font/romerio"
                    android:textStyle="bold"
                    android:textColor="@color/light_red"
                    android:text="Choose Your Payment Method"
                    android:textSize="21sp"
                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center|bottom"
                android:layout_weight="0.9"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v7.widget.CardView
                    android:id="@+id/payment_mobile_id"
                    android:layout_centerHorizontal="true"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    card_view:cardUseCompatPadding="true"
                    android:layout_width="310dp"
                    android:layout_height="150dp"
                    card_view:cardElevation="5dp"
                    card_view:cardCornerRadius="8dp"
                    card_view:cardBackgroundColor="#FFFFFF">
                    <LinearLayout
                        android:weightSum="3"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:gravity="center|bottom"
                            android:layout_weight="1.2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <View
                                android:background="@color/light_red"
                                android:layout_width="220dp"
                                android:layout_height="5dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:layout_weight="0.6"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:gravity="center"
                                android:layout_weight="1.5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:src="@drawable/payment_mobile"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:gravity="center|left"
                                android:layout_weight="0.5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <TextView
                                    android:fontFamily="@font/young"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/black"
                                    android:text="Mobile Banking"
                                    android:textSize="25sp"
                                    android:textAllCaps="false"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center|top"
                            android:layout_weight="1.2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <View
                                android:background="@color/light_green"
                                android:layout_width="220dp"
                                android:layout_height="5dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:gravity="center|top"
                android:layout_weight="0.9"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v7.widget.CardView
                    android:id="@+id/payment_card_id"
                    android:layout_centerHorizontal="true"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    card_view:cardUseCompatPadding="true"
                    android:layout_width="310dp"
                    android:layout_height="150dp"
                    card_view:cardElevation="5dp"
                    card_view:cardCornerRadius="8dp"
                    card_view:cardBackgroundColor="#FFFFFF">
                    <LinearLayout
                        android:weightSum="3"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:gravity="center|bottom"
                            android:layout_weight="1.2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <View
                                android:background="@color/light_red"
                                android:layout_width="220dp"
                                android:layout_height="5dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:layout_weight="0.6"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:gravity="center"
                                android:layout_weight="1.5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:src="@drawable/payment_card"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:gravity="center|left"
                                android:layout_weight="0.5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <TextView
                                    android:fontFamily="@font/young"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/black"
                                    android:text="Card Payment"
                                    android:textSize="25sp"
                                    android:textAllCaps="false"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center|top"
                            android:layout_weight="1.2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <View
                                android:background="@color/light_green"
                                android:layout_width="220dp"
                                android:layout_height="5dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>