<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ececee"
    android:orientation="vertical"
    android:gravity="bottom"
    tools:context=".LoginActivity">

    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <LinearLayout
            android:weightSum="2"
            android:orientation="vertical"
            android:layout_weight="0.7"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_weight="1"
                android:fontFamily="@font/porfont"
                android:gravity="center|left|bottom"
                android:text="Welcome"
                android:textColor="#31d37c"
                android:textSize="42sp"
                android:textStyle="bold" />

            <TextView
                android:textStyle="bold"
                android:textColor="#31d37c"
                android:fontFamily="@font/porfont"
                android:textSize="42sp"
                android:layout_marginLeft="25dp"
                android:gravity="center|left|top"
                android:layout_weight="1"
                android:text="Back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1.3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:scaleType="fitCenter"
                android:src="@drawable/icon_gy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="500dp">
       <LinearLayout
           android:gravity="bottom|center"
           android:layout_marginTop="180dp"
           android:background="@drawable/login_round"
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <LinearLayout
               android:weightSum="2"
               android:orientation="horizontal"
               android:background="@drawable/login_square_2"
               android:layout_width="300dp"
               android:layout_height="90dp">
               <TextView
                   android:gravity="center|right"
                   android:text="Don't have an account?"
                   android:textAllCaps="false"
                   android:textSize="17sp"
                   android:textColor="#B0000000"
                   android:textStyle="bold"
                   android:layout_weight="0.7"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"/>

               <TextView
                   android:id="@+id/login_textview_signup_id"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_weight="1.3"
                   android:gravity="center|left"
                   android:paddingLeft="5dp"
                   android:text="SignUp"
                   android:textAllCaps="false"
                   android:textColor="#31d37c"
                   android:textSize="17sp"
                   android:textStyle="bold" />
           </LinearLayout>
       </LinearLayout>
       <LinearLayout
           android:weightSum="3"
           android:orientation="vertical"
           android:layout_marginTop="40sp"
           android:layout_centerHorizontal="true"
           android:background="@drawable/login_square_1"
           android:layout_width="300dp"
           android:layout_height="300dp">
           <LinearLayout
               android:gravity="center"
               android:layout_weight="1.2"
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <TextView
                   android:textAllCaps="false"
                   android:text="Sign In"
                   android:textSize="32sp"
                   android:textColor="#31d37c"
                   android:textStyle="bold"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
           </LinearLayout>
           <LinearLayout
               android:weightSum="2"
               android:orientation="vertical"
               android:layout_weight="0.8"
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <EditText
                   android:id="@+id/login_email_id"
                   android:paddingLeft="5dp"
                   android:drawablePadding="10dp"
                   android:drawableLeft="@drawable/icon_mail"
                   android:layout_margin="8dp"
                   android:background="@drawable/login_edittext_square"
                   android:hint="Email"
                   android:layout_weight="1"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"/>
               <EditText
                   android:id="@+id/login_password_id"
                   android:inputType="textPassword"
                   android:paddingLeft="5dp"
                   android:drawablePadding="10dp"
                   android:drawableLeft="@drawable/icon_password"
                   android:background="@drawable/login_edittext_square"
                   android:layout_margin="8dp"
                   android:hint="Password"
                   android:layout_weight="1"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"/>
           </LinearLayout>
           <LinearLayout
               android:gravity="center"
               android:layout_weight="1"
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <Button
                   android:id="@+id/login_button_signin_id"
                   android:textStyle="bold"
                   android:textColor="#ffffff"
                   android:textSize="20sp"
                   android:text="Sign In"
                   android:textAllCaps="false"
                   android:background="@drawable/login_button_square"
                   android:layout_margin="9dp"
                   android:layout_width="match_parent"
                   android:layout_height="55dp"/>
           </LinearLayout>
       </LinearLayout>
   </RelativeLayout>

</LinearLayout>