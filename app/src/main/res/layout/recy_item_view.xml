<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#ececee"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_marginLeft="7dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardUseCompatPadding="true"
        android:layout_width="165dp"
        android:layout_height="200dp"
        card_view:cardElevation="3dp"
        card_view:cardBackgroundColor="#FFFFFF">
        <LinearLayout
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="0.9"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/recy_Image_ID"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/test_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:weightSum="2"
                android:orientation="vertical"
                android:layout_weight="1.1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:background="@color/light_green"
                    android:weightSum="2"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/recy_model_ID"
                        android:paddingLeft="2dp"
                        android:gravity="center|left|bottom"
                        android:fontFamily="@font/young"
                        android:text="This is model"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textAllCaps="false"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/recy_brand_ID"
                        android:paddingLeft="2dp"
                        android:fontFamily="@font/young"
                        android:text="Brand"
                        android:textStyle="normal"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:textAllCaps="false"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:weightSum="2"
                        android:layout_weight="0.6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_weight="1.7"
                            android:gravity="center|right"
                            android:fontFamily="@font/young"
                            android:text="$"
                            android:textStyle="normal"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:textAllCaps="false"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:layout_weight="1"
                            android:id="@+id/recy_price_ID"
                            android:gravity="center|left"
                            android:paddingLeft="2dp"
                            android:fontFamily="@font/young"
                            android:text="1234"
                            android:textStyle="normal"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:textAllCaps="false"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1.4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:padding="4dp"
                            android:id="@+id/recy_addButton_ID"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_item_cart"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>