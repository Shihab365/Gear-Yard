<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginBottom="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:weightSum="2"
    android:background="@color/light_green"
    android:layout_width="match_parent"
    android:layout_height="200dp">
    <LinearLayout
        android:layout_margin="4dp"
        android:background="@android:color/white"
        android:layout_weight="0.4"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/fav_image_ID"
            android:padding="15dp"
            android:scaleType="fitCenter"
            android:src="@drawable/test_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:background="@color/light_green"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_weight="1.6"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:weightSum="2"
            android:orientation="vertical"
            android:layout_weight="0.3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/fav_tv_model_ID"
                android:paddingLeft="13dp"
                android:gravity="center|left|bottom"
                android:layout_weight="1"
                android:fontFamily="@font/porfont"
                android:text="4k Android Voice"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/fav_tv_brand_ID"
                android:paddingLeft="13dp"
                android:gravity="center|left|top"
                android:layout_weight="1"
                android:fontFamily="@font/young"
                android:text="Walton"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1.7"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:padding="2dp"
                android:id="@+id/fav_Dis_likeButton_ID"
                android:src="@drawable/ic_del_fav"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>