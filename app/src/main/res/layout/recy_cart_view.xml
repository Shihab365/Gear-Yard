<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white_shadow"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_margin="4dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        card_view:cardElevation="4dp"
        card_view:cardBackgroundColor="#FFFFFF">
        <LinearLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="1.4"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/cart_imageview_ID"
                    android:padding="3dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/test_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="0.6"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/cart_tv_brand_ID"
                        android:fontFamily="@font/young"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="22dp"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/light_red"
                        android:text="Brand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/cart_tv_model_ID"
                        android:fontFamily="@font/young"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="41dp"
                        android:textAllCaps="false"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="@color/light_green"
                        android:text="Model"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="62dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:fontFamily="@font/young"
                            android:textAllCaps="false"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textColor="@color/light_green"
                            android:text="Quantity: "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/cart_tv_quantity_ID"
                            android:fontFamily="@font/young"
                            android:textAllCaps="false"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textColor="@color/light_green"
                            android:text="5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/cart_button_deleteID"
                        android:padding="5dp"
                        android:scaleType="fitCenter"
                        android:layout_marginLeft="200dp"
                        android:src="@drawable/ic_blue_cross"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>
                    <LinearLayout
                        android:layout_marginLeft="163dp"
                        android:layout_marginTop="77dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:fontFamily="@font/young"
                            android:textAllCaps="false"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/light_red"
                            android:text="$"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/cart_tv_total_ID"
                            android:fontFamily="@font/young"
                            android:textAllCaps="false"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/light_red"
                            android:text="12345"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>