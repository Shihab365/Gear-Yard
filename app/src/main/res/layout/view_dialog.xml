<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:weightSum="2"
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="490dp">
        <LinearLayout
            android:weightSum="2"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:background="#FFFFFF"
            android:layout_weight="0.7"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:gravity="center|right"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <ImageView
                        android:id="@+id/btnDismissId"
                        android:padding="12dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_cross"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.steelkiwi.library.IncrementProductView
                        android:id="@+id/productView"
                        android:layout_width="270dp"
                        android:layout_height="270dp"
                        android:background="@android:color/transparent"
                        android:layout_centerInParent="true"
                        app:ipv_middle_icon="@drawable/test_image"
                        app:ipv_highlight_background_color="@color/light_green"
                        app:ipv_default_background_color="@color/light_red"
                        app:ipv_text_color="@android:color/white"
                        app:ipv_text_size="@dimen/text_size"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:weightSum="3"
            android:orientation="vertical"
            android:layout_weight="1.3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:weightSum="2"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:weightSum="2"
                    android:layout_weight="0.7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:fontFamily="@font/young"
                            android:id="@+id/dialogModelId"
                            android:paddingLeft="9dp"
                            android:gravity="center|left"
                            android:text="Model"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:textSize="22sp"
                            android:textColor="@color/light_red"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:fontFamily="@font/young"
                            android:id="@+id/dialogBrandId"
                            android:paddingLeft="9dp"
                            android:gravity="center|left|top"
                            android:text="Brand"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:textSize="18sp"
                            android:textColor="@color/light_green"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="3dp"
                    android:background="#03A9F4"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_weight="1.3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:paddingLeft="8dp"
                        android:layout_weight="0.6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:gravity="center"
                            android:text="$"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:textSize="16sp"
                            android:textColor="#FFFFFF"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:id="@+id/textPriceId"
                            android:gravity="center"
                            android:text="0000"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:textSize="16sp"
                            android:textColor="#FFFFFF"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:layout_margin="2dp"
                            android:gravity="center"
                            android:text=" X"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:textSize="16sp"
                            android:textColor="#FFFFFF"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:id="@+id/textCountId"
                            android:layout_margin="2dp"
                            android:gravity="center"
                            android:text="0"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:textSize="16sp"
                            android:textColor="#FFFFFF"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_weight="1.4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:paddingLeft="25dp"
                            android:gravity="center"
                            android:text="$"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:textSize="16sp"
                            android:textColor="#FFFFFF"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:id="@+id/textTotalId"
                            android:gravity="center"
                            android:text="0000"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:textSize="16sp"
                            android:textColor="#FFFFFF"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_margin="3dp"
                    android:layout_weight="1.5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.like.LikeButton
                        android:layout_marginLeft="3dp"
                        android:layout_marginBottom="3dp"
                        android:background="@drawable/login_edittext_square"
                        android:id="@+id/dialogFavButton_id"
                        app:icon_size="25dp"
                        app:icon_type="heart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_margin="3dp"
                    android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:layout_marginRight="3dp"
                        android:layout_marginBottom="4dp"
                        android:id="@+id/btnCartId"
                        android:textColor="#ffffff"
                        android:textSize="20sp"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:text="ADD  TO  CART"
                        android:background="@drawable/login_button_square"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>