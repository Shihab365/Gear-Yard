<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateProfileFragment">

    <LinearLayout
        android:weightSum="3"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_weight="1.1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/upPro_imagePrev_id"
                    android:layout_marginTop="15dp"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/icon_user_profile"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/light_green"/>
                <ImageButton
                    android:id="@+id/upPro_imageButton_id"
                    android:layout_marginLeft="115dp"
                    android:layout_marginTop="95dp"
                    android:src="@drawable/ic_addphoto"
                    android:background="@drawable/update_image_round"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:weightSum="3"
            android:orientation="vertical"
            android:layout_weight="0.6"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:padding="12dp"
                android:weightSum="2"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textStyle="normal"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textAllCaps="false"
                    android:gravity="bottom"
                    android:text="Full Name"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <EditText
                    android:id="@+id/update_etName_id"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="Shahriar Rahman Shihab"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:padding="12dp"
                android:weightSum="2"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textStyle="normal"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textAllCaps="false"
                    android:gravity="bottom"
                    android:text="Email"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <EditText
                    android:id="@+id/update_etEmail_id"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="shihab@gmail.com"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:padding="12dp"
                android:weightSum="2"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textStyle="normal"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textAllCaps="false"
                    android:gravity="bottom"
                    android:text="Address"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <EditText
                    android:id="@+id/update_etAddress_id"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="Habiganj, Sylhet"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="top|center"
            android:layout_weight="1.3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/upPro_updateButton_id"
                android:text="Update Profile"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:background="@drawable/update_button_action"
                android:layout_width="300dp"
                android:layout_height="50dp"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>